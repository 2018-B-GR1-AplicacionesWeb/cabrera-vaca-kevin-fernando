<html>

<style>
    table,th,td{
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<header>


</header>


<body>

<h2>Usuario</h2>

<table>

    <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Fecha de Nacimiento</th>
    </tr>
        <tr>
            <td>
                <%= usuario.nombreUsuario%>
            </td>
            <td>
                <%= usuario.correo%>
            </td>
            <td>
                <%= usuario.fechaNacimiento%>
            </td>
        </tr>
</table>

<h2>Roles</h2>

<table>

    <tr>
        <th>Rol</th>
    </tr>


    <% roles.forEach((rol)=> {%>
        <tr>
            <td>
                <%= rol.nombre%>
            </td>

            <td>
                <form action="/eliminarRol/<%= rol.nombre%>/<%= usuario.usuarioId%>" method="POST">
                    <button type="submit">Eliminar</button>
                </form>

            </td>
        </tr>
    <%})%>

</table>


<h2> Agregar Roels</h2>

<select>
    <option value="usuario">Usuario</option>
    <option value="administrador">Administrador</option>

</select>


<button type="button">Agregar Rol</button>


</body>




</html>